<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/onboardFragment">

    <!-- OnboardFragment -->
    <fragment
        android:id="@+id/onboardFragment"
        android:name="ru.messenger.app1.fragments.OnboardFragment"
        tools:layout="@layout/fragment_onboard">
        <action
            android:id="@+id/action_onboardFragment_to_signInFragment"
            app:destination="@id/signInFragment" />
    </fragment>

    <!-- SignInFragment -->
    <fragment
        android:id="@+id/signInFragment"
        android:name="ru.messenger.app1.fragments.SignInFragment"
        tools:layout="@layout/fragment_sign_in">

        <argument
            android:name="user"
            app:argType="ru.messenger.app1.models.User"
            app:nullable="true"
            android:defaultValue="@null" />

        <action
            android:id="@+id/action_signInFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_signInFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <!-- SignUpFragment -->
    <fragment
        android:id="@+id/signUpFragment"
        android:name="ru.messenger.app1.fragments.SignUpFragment"
        tools:layout="@layout/fragment_sign_up">

        <!-- Тоже можно задать аргумент user, если нужно -->
        <action
            android:id="@+id/action_signUpFragment_to_signInFragment"
            app:destination="@id/signInFragment">

            <!-- Аргумент, передаваемый ИМЕННО по экшену (SignUp->SignIn) -->
            <argument
                android:name="user"
                app:argType="ru.messenger.app1.models.User"
                app:nullable="true"
                android:defaultValue="@null" />
        </action>
    </fragment>

    <!-- HomeFragment -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="ru.messenger.app1.fragments.HomeFragment"
        tools:layout="@layout/fragment_home"/>
</navigation>
